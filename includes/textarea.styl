textarea
    width 100%
    height 3rem
    background-color transparent
    &.materialize-textarea
        overflow-y hidden
        padding 0.8rem 0 1.6rem 0
        resize none
        min-height 3rem

.hiddendiv
    display none
    white-space pre-wrap
    word-wrap break-word
    overflow-wrap break-word
    padding-top 1.2rem

.autocomplete-content
    margin-top -20px
    display block
    opacity 1
    position static
    li
        .highlight
            color #444
        img
            height 40px
            width 40px
            margin 5px 15px