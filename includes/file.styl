.file-field
    position relative
    .file-path-wrapper
        overflow hidden
        padding-left 10px
    input
        &.file-path
            width 100%
    span
        cursor pointer
    input[type=file]
        position absolute
        top 0
        right 0
        left 0
        bottom 0
        width 100%
        margin 0
        padding 0
        font-size 20px
        cursor pointer
        opacity 0
        filter unquote('alpha(opacity=0)')

.file-field .btn,
.file-field .btn-large
    float left
    height 3rem
    line-height 3rem