.pagination
    li
        display inline-block
        border-radius 2px
        text-align center
        vertical-align top
        height 30px
        a
            color #444
            display inline-block
            font-size 1.2rem
            padding 0 10px
            line-height 30px
        &.active
            background-color #ee6e73
            a
                color #fff
        &.disabled
            a
                cursor default
                color #999
        i
            font-size 2rem
        &.pages
            ul
                li
                    display inline-block
                    float none

@media only screen and (max-width: 992px)
    .pagination
        width 100%
        li
            &.pages
                width 80%
                overflow hidden
                white-space nowrap

    .pagination li.prev,
    .pagination li.next
        width 10%